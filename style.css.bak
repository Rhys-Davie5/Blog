/* Default styles for the browser */
*{
    margin:0px;
    padding: 0px;
    list-style: none;
    text-decoration: none;
	color:white;}
	
header{
background:black;
}	
	
	
body{
background: linear-gradient(-45deg, #1DB954, #4285F4, #23d5ab);
background-size: 400% 400%;
	animation: gradient 10s ease infinite;
	height: 100vh;
}

@keyframes gradient {
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 0% 50%;
	}
}


	
header{
    width: 100vw;
    height: 100px;
    border-bottom: solid 1px rgba(16, 16, 16, 0.1);}
header .inner{
    width: 770px; /* This is the inner width of the content inside of your header (80%, etc) */
    height: 100%;
    display: block;
    margin: 0 auto;
	float: center;}
	
header .logo{
    display: table;
    height: 100%;
    float: left;}
header .logo div{
    height: 100%;
    display: table-cell;
    vertical-align: middle;}
header .logo img{
    height: 50px;
    margin-top: 5px;} /* Optical alignment of the logo */
header nav{
    float: right;
    height: 100%;}
header nav li{
    display: table;
    height: 100%;
    float: left;
    margin-right: 30px;}
header nav li:last-of-type{
    margin-right: 0;}
header nav span {
    display: table-cell;
    vertical-align: middle;}
header nav a{
    color:white;} /* This turn the link text a different colour */
	

	
header nav .button{
    background-color: #1ab26b; /* This HEX is the color of the 3D button */
    color: #000000;
    padding: 10px 10px;
    border-radius: 4px;
	font-weight: bold;}
header nav .button:hover{
    filter: brightness(2.0);}

